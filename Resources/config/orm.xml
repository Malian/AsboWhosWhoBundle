<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
            <parameter key="asbo_whoswho.entity.address.class">Asbo\WhosWhoBundle\Entity\Address</parameter>
    </parameters>

    <services>

        <service id="asbo_whoswho.entity_manager"
                 factory-service="doctrine"
                 factory-method="getManager"
                 class="Doctrine\ORM\EntityManager"
                 public="false" />

        <service id="asbo_whoswho.entity_repository"
                 factory-service="doctrine"
                 factory-method="getRepository"
                 class="Doctrine\Common\Persistence\ObjectRepository"
                 public="false">
            <argument>%asbo_whoswho.entity.address.class%</argument>
        </service>

        <service id="asbo_whoswho.address_manager" class="Asbo\WhosWhoBundle\Doctrine\AddressManager">
            <argument type="service" id="asbo_whoswho.entity_manager" />
            <argument type="service" id="asbo_whoswho.entity_repository" />
        </service>

    </services>

</container>
