<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="asbo.controller.fra.class">Asbo\WhosWhoBundle\Controller\FraController</parameter>
        <parameter key="asbo.controller.comite.class">Asbo\WhosWhoBundle\Controller\ComiteController</parameter>
        <parameter key="asbo_whoswho.controller.address.class">Asbo\WhosWhoBundle\Controller\DefaultController</parameter>
    </parameters>

    <services>
        <service id="asbo_whoswho.controller.comite" class="%asbo.controller.comite.class%">
            <argument>asbo</argument>
            <argument>whoswho</argument>
            <argument>AsboWhosWhoBundle:Comite</argument>

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        <service id="asbo_whoswho.controller.fra" class="%asbo.controller.fra.class%">
            <argument>asbo</argument>
            <argument>whoswho</argument>
            <argument>AsboWhosWhoBundle:Fra</argument>

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        <service id="asbo_whoswho.controller.address" class="%asbo_whoswho.controller.address.class%">
            <argument>asbo_whoswho</argument>
            <argument>address</argument>
            <argument>AsboWhosWhoBundle:Address</argument>

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>
