<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="asbo_whoswho.menu_builder.class">Asbo\WhosWhoBundle\Menu\Menu</parameter>
    </parameters>

    <services>

        <service id="asbo_whoswho.menu_builder" class="%asbo_whoswho.menu_builder.class%">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="security.context" />
            <argument type="service" id="translator" />
        </service>

        <service id="asbo_whoswho.menu.fra"
                 class="Knp\Menu\MenuItem"
                 factory-service="asbo_whoswho.menu_builder"
                 factory-method="fraMenu"
                 scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="asbo_whoswho.fra" />
        </service>

    </services>

</container>